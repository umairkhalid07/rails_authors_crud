<%= stylesheet_link_tag "main", "data-turbo-track": "reload" %>

<%= form_with model: @author do |form| %>
  <div class="mt-3">
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @author.errors.full_messages_for(:name).each do |message| %>
      <div class="error"><%= message %></div>
    <% end %>
  </div>

  <div class="mt-3">
    <%= form.label :description %><br>
    <%= form.text_area :description, size: "100x5" %><br>
    <% @author.errors.full_messages_for(:description).each do |message| %>
      <div class="error"><%= message %></div>
    <% end %>
  </div>

  <button class="btn btn-primary">
    <%= form.submit %>
  </button>
<% end %>
